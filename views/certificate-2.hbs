<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Certificate of Achievement - Print Ready</title>
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700;900&family=Inter:wght@300;400;500;600&display=swap');

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        font-family: 'Inter', sans-serif;
        background: #f5f5f5;
        color: #000;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 20px;
      }

      .certificate-container {
        position: relative;
        background: white;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      }

      .certificate {
        background: white;
        border: 4px solid #000;
        width: 650px;
        height: 900px;
        padding: 70px;
        position: relative;
      }

      /* Decorative border patterns */
      .decorative-border {
        position: absolute;
        top: 15px;
        left: 15px;
        right: 15px;
        bottom: 15px;
        border: 2px solid #000;
      }

      .inner-border {
        position: absolute;
        top: 25px;
        left: 25px;
        right: 25px;
        bottom: 25px;
        border: 1px solid #666;
      }

      /* Corner decorations */
      .corner-decoration {
        position: absolute;
        width: 40px;
        height: 40px;
        border: 3px solid #000;
      }

      .corner-decoration.top-left {
        top: 35px;
        left: 35px;
        border-right: none;
        border-bottom: none;
      }

      .corner-decoration.top-right {
        top: 35px;
        right: 35px;
        border-left: none;
        border-bottom: none;
      }

      .corner-decoration.bottom-left {
        bottom: 35px;
        left: 35px;
        border-right: none;
        border-top: none;
      }

      .corner-decoration.bottom-right {
        bottom: 35px;
        right: 35px;
        border-left: none;
        border-top: none;
      }

      /* Ornamental elements */
      .ornament {
        position: absolute;
        width: 20px;
        height: 20px;
        border: 2px solid #333;
        border-radius: 50%;
      }

      .ornament.top-left {
        top: 80px;
        left: 60px;
      }
      .ornament.top-right {
        top: 80px;
        right: 60px;
      }
      .ornament.bottom-left {
        bottom: 160px;
        left: 60px;
      }
      .ornament.bottom-right {
        bottom: 160px;
        right: 60px;
      }

      /* Decorative lines */
      .decorative-line {
        background: repeating-linear-gradient(
          90deg,
          #000 0px,
          #000 8px,
          transparent 8px,
          transparent 16px
        );
        height: 2px;
      }

      .decorative-line.top {
        position: absolute;
        top: 120px;
        left: 100px;
        right: 100px;
      }

      .decorative-line.bottom {
        position: absolute;
        bottom: 200px;
        left: 100px;
        right: 100px;
      }

      /* Seal */
      .seal {
        position: absolute;
        top: 40px;
        left: 50%;
        transform: translateX(-50%);
        width: 90px;
        height: 90px;
        border: 4px solid #000;
        border-radius: 50%;
        background: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        color: #000;
        font-weight: 900;
        z-index: 5;
      }

      .seal::before {
        content: '';
        position: absolute;
        width: 70px;
        height: 70px;
        border: 2px solid #333;
        border-radius: 50%;
      }

      /* Typography */
      .organization {
        text-align: center;
        font-size: 14px;
        font-weight: 500;
        color: #333;
        margin-bottom: 25px;
        letter-spacing: 3px;
        text-transform: uppercase;
        border-bottom: 1px solid #ccc;
        padding-bottom: 8px;
        margin-left: 100px;
        margin-right: 100px;
      }

      .certificate h1 {
        font-family: 'Playfair Display', serif;
        font-size: 38px;
        font-weight: 900;
        color: #000;
        text-align: center;
        margin-bottom: 15px;
        letter-spacing: 2px;
        text-transform: uppercase;
      }

      .subtitle {
        text-align: center;
        font-size: 16px;
        font-weight: 300;
        margin-bottom: 45px;
        color: #555;
        font-style: italic;
      }

      .recipient-section {
        text-align: center;
        margin: 50px 0;
        position: relative;
      }

      .presented-to {
        font-size: 16px;
        color: #666;
        margin-bottom: 15px;
        font-weight: 400;
        letter-spacing: 1px;
      }

      .recipient {
        font-family: 'Playfair Display', serif;
        font-size: 32px;
        font-weight: 700;
        color: #000;
        margin-bottom: 20px;
        position: relative;
        display: inline-block;
        padding: 0 30px;
        border-bottom: 3px solid #000;
        padding-bottom: 8px;
      }

      .achievement {
        text-align: center;
        font-size: 15px;
        color: #333;
        margin: 35px auto;
        max-width: 480px;
        line-height: 1.6;
        font-weight: 400;
      }

      .course-section {
        text-align: center;
        margin: 35px auto;
        padding: 25px;
        max-width: 500px;
        border: 2px solid #000;
        position: relative;
      }

      .course-section::before {
        content: '';
        position: absolute;
        top: 5px;
        left: 5px;
        right: 5px;
        bottom: 5px;
        border: 1px solid #666;
      }

      .course-title {
        font-size: 20px;
        font-weight: 700;
        color: #000;
        margin-bottom: 10px;
        font-family: 'Playfair Display', serif;
        text-transform: uppercase;
        letter-spacing: 1px;
      }

      .completion-date {
        font-size: 14px;
        color: #555;
        font-weight: 400;
      }

      /* Footer signatures */
      .footer {
        position: absolute;
        bottom: 70px;
        left: 70px;
        right: 70px;
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
      }

      .signature {
        text-align: center;
        position: relative;
        min-width: 140px;
      }

      .signature-line {
        width: 120px;
        height: 2px;
        background: #000;
        margin: 0 auto 12px auto;
      }

      .signature .name {
        font-weight: 600;
        color: #000;
        font-size: 15px;
        margin-bottom: 4px;
      }

      .signature .label {
        font-size: 11px;
        color: #666;
        font-weight: 400;
        letter-spacing: 0.5px;
        text-transform: uppercase;
      }

      /* Background pattern for texture */
      .background-texture {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        opacity: 0.02;
        background-image:
          radial-gradient(circle at 20% 20%, #000 1px, transparent 1px),
          radial-gradient(circle at 80% 80%, #000 1px, transparent 1px);
        background-size:
          40px 40px,
          60px 60px;
      }

      /* Flourish elements */
      .flourish {
        position: absolute;
        font-family: 'Playfair Display', serif;
        font-size: 24px;
        font-weight: 400;
        color: #333;
      }

      .flourish.top-center {
        top: 180px;
        left: 50%;
        transform: translateX(-50%);
      }

      .flourish.bottom-center {
        bottom: 240px;
        left: 50%;
        transform: translateX(-50%);
      }

      /* Print optimization */
      @media print {
        body {
          background: white;
          margin: 0;
          padding: 0;
        }

        .certificate-container {
          box-shadow: none;
          margin: 0;
        }

        .certificate {
          page-break-inside: avoid;
        }
      }

      @page {
        size: A4;
        margin: 0.5in;
      }
    </style>
  </head>
  <body>
    <div class='certificate-container'>
      <div class='certificate'>
        <div class='background-texture'></div>
        <div class='decorative-border'></div>
        <div class='inner-border'></div>

        <!-- Corner decorations -->
        <div class='corner-decoration top-left'></div>
        <div class='corner-decoration top-right'></div>
        <div class='corner-decoration bottom-left'></div>
        <div class='corner-decoration bottom-right'></div>

        <!-- Ornamental elements -->
        <div class='ornament top-left'></div>
        <div class='ornament top-right'></div>
        <div class='ornament bottom-left'></div>
        <div class='ornament bottom-right'></div>

        <!-- Decorative lines -->
        <div class='decorative-line top'></div>
        <div class='decorative-line bottom'></div>

        <!-- Flourishes -->
        <div class='flourish top-center'>❦</div>
        <div class='flourish bottom-center'>❦</div>

        <div class='seal'>★</div>

        <div class='organization'>{{organizationName}}</div>
        <h1>{{certificateTitle}}</h1>
        <div class='subtitle'>{{certificateSubtitle}}</div>

        <div class='recipient-section'>
          <div class='presented-to'>is hereby presented to</div>
          <div class='recipient'>{{recipientName}}</div>
        </div>

        <div class='achievement'>
          {{achievementText}}
        </div>

        <div class='course-section'>
          <div class='course-title'>{{courseTitle}}</div>
          <div class='completion-date'>{{completionDate}}</div>
        </div>

        <div class='footer'>
          <div class='signature'>
            <div class='signature-line'></div>
            <div class='name'>{{signatureName}}</div>
            <div class='label'>{{signatureLabel}}</div>
          </div>
          <div class='signature'>
            <div class='signature-line'></div>
            <div class='name'>{{issueDate}}</div>
            <div class='label'>Date Issued</div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>